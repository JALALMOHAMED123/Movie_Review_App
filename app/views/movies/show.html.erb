
<%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="card">
  <% if @movie.image.attached? %>
    <div class="card-img-top"><%= image_tag(@movie.image)%></div>
  <% end %>
  <div class="card-body">
    <h4 class="card-title">
      <%= @movie.name %>
    </h4>

    <p>
      Release date:
      <%= @movie.release_date.strftime('%d/%m/%Y') %>
    </p>
    <%= render @movie %>
    <%= link_to "Back", movies_path, class: 'btn btn-secondary' %>
    <%= link_to "Edit", edit_movie_path(@movie), class: 'btn btn-warning' %>
    <%= link_to "Delete", @movie, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
  </div>
</div>
<br>
<div id="ratings_list">
  <%= render "ratings/rating", ratings: @ratings %>
</div>
<br>
<div id="rating_form">
  <%= render "ratings/form", rating: @rating %>
</div>

<div style="padding: 10px 0" id="comment_form">
  <%= render 'comments/form', comment: @comment %>
</div>
<div id="comment_list">
  <% if @comments.present? %>
    <%= render 'comments/comment', comments: @comments %>
  <% end %>
</div>
